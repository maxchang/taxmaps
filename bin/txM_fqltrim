################################################################################
### MODULES ####################################################################

from optparse import OptionParser
import sys

################################################################### /MODULES ###
################################################################################


################################################################################
### FUNCTIONS ##################################################################

################################################################# /FUNCTIONS ###
################################################################################


################################################################################
### ARGUMENTS,OPTIONS ##########################################################

parser = OptionParser(usage="\n%prog [options]", version="%prog v0.2")

parser.add_option(
    "-i",
    metavar="FILE",
    type="string",
    dest="input_file",
    default='stdin',
    help="Input fastq file (default = 'stdin')"
)

parser.add_option(
    "-l",
    metavar="INT",
    type="int",
    dest="len",
    default=None,
    help="5p trim length (default = None)"
)

(opt, args) = parser.parse_args()

######################################################### /ARGUMENTS,OPTIONS ###
################################################################################


################################################################################
### CONSTANTS ##################################################################

################################################################# /CONSTANTS ###
################################################################################


################################################################################
### MAIN #######################################################################

if __name__ == "__main__":
    if opt.input_file != 'stdin':
        ff = open(opt.input_file, 'r')
    else:
        ff = sys.stdin
    while True:
        l1 = ff.readline()
        if not l1:
            break
        sys.stdout.write(l1)
        sys.stdout.write(ff.readline().strip()[opt.len:] + '\n')
        sys.stdout.write(ff.readline())
        sys.stdout.write(ff.readline().strip()[opt.len:] + '\n')
    if opt.input_file != 'stdin':
        ff.close()

###################################################################### /MAIN ###
################################################################################
